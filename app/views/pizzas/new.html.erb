
<ol>

  <% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
    <li> <%= error %> </li>
    <% end %>
  <% end %>
</ol>
<%= form_for @pizza do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :ingredients %>
  <%= f.text_field :ingredients %>


  <%= f.collection_select(:restaurant_id, @restaurants, :id, :name, prompt: true) %>
  <%= f.submit %>
<% end %>
